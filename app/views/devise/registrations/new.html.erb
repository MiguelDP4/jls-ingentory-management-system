<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Username" %>
    <%= f.email_field :email, autocomplete: "email", placeholder: "E-Mail" %>
    <% if @minimum_password_length %>
      <%= f.password_field :password, autocomplete: "new-password", 
      placeholder: "Password#{" (#{@minimum_password_length} characters minimum)" if @minimum_password_length}" %>
    <% end %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password Confirmation" %>
    <%= f.submit "Sign up" %>
<% end %>

<%= render "devise/shared/links" %>
